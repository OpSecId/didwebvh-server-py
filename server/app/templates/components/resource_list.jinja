{% from 'macros/pagination.jinja' import render_pagination %}

<!-- Single Resource Detail Modal (Dynamically Loaded) -->
<div class="modal modal-blur fade" id="resource-detail-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ti ti-file-certificate me-2"></i>Resource Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Resource Details Content (populated by JavaScript) -->
                <div id="resource-detail-content">
                    <p class="text-center text-muted">Loading...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-table">
        <form action="resources" method="get">
            {% if pagination %}
            <div class="card-header position-relative">
                <div class="position-absolute top-0 end-0 p-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <div class="subheader">Page Size</div>
                            <div class="h2 mb-0">{{ pagination.limit }}</div>
                        </div>
                        <div class="dropdown">
                            <a class="dropdown-toggle text-secondary" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M12 19m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /><path d="M12 5m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0" /></svg>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" href="?limit=25">25 per page</a>
                                <a class="dropdown-item" href="?limit=50">50 per page</a>
                                <a class="dropdown-item" href="?limit=100">100 per page</a>
                                <a class="dropdown-item" href="?limit=200">200 per page</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row w-100">
                    <div class="col-4">
                        <div class="d-flex align-items-center">
                            <div class="subheader">Resources Returned</div>
                        </div>
                        <div class="d-flex align-items-baseline">
                            <div class="h2 mb-0">{{ pagination.total }}</div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
            <div class="card-header">
                <div class="row w-full">
                    <div class="col-2">
                        <div class="mb-2">
                            <label class="form-label form-label-sm">
                                Resource Type
                            </label>
                            <input name="resource_type" id="resource_type" class="form-control form-control-sm" type="text" placeholder="e.g. anonCredsSchema" value="{{ request.query_params.get('resource_type', '') }}">
                        </div>
                        <div class="mb-2">
                            <label class="form-label form-label-sm">
                                Resource ID
                            </label>
                            <input name="resource_id" id="resource_id" class="form-control form-control-sm" type="text" placeholder="Enter resource digest..." value="{{ request.query_params.get('resource_id', '') }}">
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="mb-2">
                            <label class="form-label form-label-sm">
                                Controller SCID
                            </label>
                            <input name="scid" id="scid" class="form-control form-control-sm" type="text" placeholder="Enter controller SCID..." value="{{ request.query_params.get('scid', '') }}">
                        </div>
                        <div class="mb-2">
                            <label class="form-label form-label-sm">
                                Resource Name
                            </label>
                            <input name="resource_name" id="resource_name" class="form-control form-control-sm" type="text" placeholder="Enter resource name..." value="{{ request.query_params.get('resource_name', '') }}">
                        </div>
                    </div>
                    <div class="col-2">
                        <!-- Empty column for spacing -->
                    </div>
                    <div class="col-2">
                        <!-- Empty column for spacing -->
                    </div>
                    <div class="col-2">
                        <!-- Empty column for spacing -->
                    </div>
                    <div class="col-2">
                        <h3 class="card-title mb-3">
                            <i class="ti ti-filter me-2"></i>Filter Resources
                        </h3>
                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            <i class="ti ti-search me-1"></i>Apply Filters
                        </button>
                        <button onclick="window.location.reload()" class="btn btn-outline-secondary w-100" type="button">
                            <i class="ti ti-refresh me-1"></i>Refresh Table
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div id="advanced-table">
        <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
            <table class="table table-vcenter table-selectable">
                <thead class="sticky-top" style="background: linear-gradient(to bottom, #f8f9fa 0%, #e9ecef 100%); border-bottom: 2px solid #dee2e6;">
                    <tr>
                        <th class="text-muted text-uppercase" style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.5px;">
                            <button class="table-sort d-flex justify-content-between align-items-center w-100 border-0 bg-transparent text-muted"
                                data-sort="sort-controller">
                                <span>Controller</span>
                                <i class="ti ti-chevron-down ms-1"></i>
                            </button>
                        </th>
                        <th class="text-muted text-uppercase" style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.5px;">
                            <button class="table-sort d-flex justify-content-between align-items-center w-100 border-0 bg-transparent text-muted"
                                data-sort="sort-type">
                                <span>Type</span>
                                <i class="ti ti-chevron-down ms-1"></i>
                            </button>
                        </th>
                        <th class="text-muted text-uppercase" style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.5px;">Resource Details</th>
                        <th class="w-1 text-muted text-uppercase" style="font-size: 0.75rem; font-weight: 600; letter-spacing: 0.5px;">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-tbody">
                    {% if results|length == 0 %}
                    <tr>
                        <td colspan="4" class="text-center py-5">
                            <div class="empty">
                                <div class="empty-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M14 3v4a1 1 0 0 0 1 1h4" /><path d="M5 8v-3a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2h-5" /><path d="M6 14m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" /><path d="M4.5 17l-1.5 5l3 -1.5l3 1.5l-1.5 -5" /></svg>
                                </div>
                                <p class="empty-title">No resources found</p>
                                <p class="empty-subtitle text-secondary">
                                    Try adjusting your filters or upload new resources
                                </p>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    {% for resource in results %}
                    <tr>
                        <td class="sort-controller">
                            <div class="d-flex align-items-center">
                                <span class="avatar avatar-sm me-2" style="background-image: url({{ resource.author.avatar }})"></span>
                                <div class="flex-fill">
                                    <div class="fw-bold text-truncate" style="max-width: 200px; font-size: 0.875rem;" title="{{ resource.author.domain }}:{{ resource.author.namespace }}:{{ resource.author.alias }}">
                                        {{ resource.author.namespace | title }} / {{ resource.author.alias | replace('-', ' ') | title }}
                                    </div>
                                    <div class="text-muted" style="font-size: 0.75rem; word-break: break-all;" title="{{ resource.author.scid }}">
                                        {{ resource.author.scid }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="sort-type">
                            {% if 'Schema' in resource.resource_type %}
                            <span class="badge bg-blue-lt user-select-all" style="cursor: text;" title="Click to select">
                                <i class="ti ti-database me-1"></i>{{ resource.resource_type }}
                            </span>
                            {% elif 'CredDef' in resource.resource_type %}
                            <span class="badge bg-indigo-lt user-select-all" style="cursor: text;" title="Click to select">
                                <i class="ti ti-id-badge me-1"></i>{{ resource.resource_type }}
                            </span>
                            {% elif 'RevReg' in resource.resource_type %}
                            <span class="badge bg-pink-lt user-select-all" style="cursor: text;" title="Click to select">
                                <i class="ti ti-refresh me-1"></i>{{ resource.resource_type }}
                            </span>
                            {% else %}
                            <span class="badge bg-secondary-lt user-select-all" style="cursor: text;" title="Click to select">
                                <i class="ti ti-file me-1"></i>{{ resource.resource_type }}
                            </span>
                            {% endif %}
                        </td>
                        <td class="sort-details">
                            {% if resource.resource_name and resource.resource_name != resource.resource_id %}
                            <div class="d-flex align-items-center mb-1">
                                <i class="ti ti-file-text me-2 text-muted"></i>
                                <div class="text-truncate" style="max-width: 280px;">
                                    <strong>{{ resource.resource_name }}</strong>
                                </div>
                            </div>
                            {% endif %}
                            <div class="d-flex align-items-start">
                                <i class="ti ti-info-circle me-2 text-muted" style="margin-top: 2px; flex-shrink: 0;"></i>
                                <div class="text-secondary text-truncate" style="max-width: 280px; font-size: 0.75rem; line-height: 1.4;">
                                    {{ resource.details | string | replace("'","") | replace("{","") | replace("}","") }}
                                </div>
                            </div>
                            {% if resource.resource_id %}
                            <div class="d-flex align-items-center mt-1">
                                <i class="ti ti-fingerprint me-2 text-muted" style="font-size: 0.7rem;"></i>
                                <code class="text-muted user-select-all" 
                                      style="font-size: 0.65rem; cursor: pointer; word-break: break-all; line-height: 1.3;" 
                                      onclick="copyToClipboard('{{ resource.resource_id }}')"
                                      title="Click to copy digest">
                                    {{ resource.resource_id }}
                                </code>
                            </div>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex justify-content-end gap-2">
                                <button type="button" class="btn btn-sm btn-outline-primary rounded-pill" 
                                        data-bs-toggle="modal"
                                        data-bs-target="#resource-detail-modal"
                                        data-resource-index="{{ loop.index }}"
                                        data-resource-id="{{ resource.resource_id }}"
                                        onclick="prepareResourceModal(this)"
                                        title="View Details">
                                    <i class="ti ti-eye me-1"></i>Details
                                </button>
                                <a target="_blank" href="{{ resource.url }}" class="btn btn-sm btn-outline-secondary rounded-pill" title="Fetch Resource">
                                    <i class="ti ti-download me-1"></i>Fetch
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
        {{ render_pagination(pagination, request) }}
    </div>
</div>

<script>
    const advancedTable = {
        headers: [
            { "data-sort": "sort-controller", name: "Controller" },
            { "data-sort": "sort-type", name: "Type" },
            { "data-sort": "sort-details", name: "Details" },
        ],
    };
    window.tabler_list = window.tabler_list || {};
    document.addEventListener("DOMContentLoaded", function () {
        // Initialize List.js for client-side sorting only (server-side pagination)
        const list = (window.tabler_list["advanced-table"] = new List("advanced-table", {
            sortClass: "table-sort",
            listClass: "table-tbody",
            // No pagination - using server-side pagination instead
            valueNames: advancedTable.headers.map((header) => header["data-sort"]),
        }));
        const searchInput = document.querySelector("#advanced-table-search");
        if (searchInput) {
            searchInput.addEventListener("input", () => {
                list.search(searchInput.value);
            });
        }
    });
    
    // Smooth pagination without full page reload
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('pagination-link')) {
            e.preventDefault();
            const page = e.target.getAttribute('data-page');
            const currentUrl = new URL(window.location);
            currentUrl.searchParams.set('page', page);
            
            // Show loading state
            const tableContainer = document.getElementById('advanced-table');
            tableContainer.style.opacity = '0.5';
            tableContainer.style.pointerEvents = 'none';
            
            // Update URL without reload
            window.history.pushState({}, '', currentUrl.toString());
            
            // Fetch new content
            fetch(currentUrl.toString(), {
                headers: {
                    'Accept': 'text/html',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                // Parse the response and update only the table content
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                
                // Update the table content
                const newTable = doc.querySelector('#advanced-table');
                if (newTable) {
                    document.getElementById('advanced-table').innerHTML = newTable.innerHTML;
                }
                
                // Update pagination
                const newPagination = doc.querySelector('.card-footer');
                if (newPagination) {
                    const currentPagination = document.querySelector('.card-footer');
                    if (currentPagination) {
                        currentPagination.innerHTML = newPagination.innerHTML;
                    }
                }
                
                // Reinitialize List.js for sorting on new content
                if (window.tabler_list["advanced-table"]) {
                    window.tabler_list["advanced-table"].reIndex();
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Fallback to page reload
                window.location.href = currentUrl.toString();
            })
            .finally(() => {
                // Remove loading state
                tableContainer.style.opacity = '1';
                tableContainer.style.pointerEvents = 'auto';
            });
        }
    });
    
    // Copy to clipboard function
    window.copyToClipboard = function(text) {
        navigator.clipboard.writeText(text).then(function() {
            // Show success feedback
            const toast = document.createElement('div');
            toast.className = 'toast show position-fixed top-0 end-0 m-3';
            toast.style.zIndex = '9999';
            toast.innerHTML = `
                <div class="toast-header">
                    <i class="ti ti-check text-success me-2"></i>
                    <strong class="me-auto">Copied!</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                </div>
                <div class="toast-body">
                    Resource hash copied to clipboard
                </div>
            `;
            document.body.appendChild(toast);
            
            // Auto-remove after 3 seconds
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 3000);
        }).catch(function(err) {
            console.error('Failed to copy: ', err);
        });
    }
    
    // Pre-load resource data for modal display
    window.resourcesData = {
        {% for resource in results %}
        {{ loop.index }}: {{ resource | tojson }}{% if not loop.last %},{% endif %}
        {% endfor %}
    };
    
    // Prepare resource modal with data
    window.prepareResourceModal = function(button) {
        const resourceIndex = button.getAttribute('data-resource-index');
        const resource = window.resourcesData[resourceIndex];
        
        console.log('prepareResourceModal called with index:', resourceIndex);
        console.log('Resource data:', resource);
        
        if (!resource) {
            console.error('Resource not found for index:', resourceIndex);
            return;
        }
        
        // Helper function to get resource type badge with icon
        const getResourceTypeBadge = (type) => {
            if (type.includes('Schema')) {
                return '<span class="badge bg-blue-lt me-2"><i class="ti ti-database me-1"></i>' + type + '</span>';
            } else if (type.includes('CredDef')) {
                return '<span class="badge bg-indigo-lt me-2"><i class="ti ti-id-badge me-1"></i>' + type + '</span>';
            } else if (type.includes('RevReg')) {
                return '<span class="badge bg-pink-lt me-2"><i class="ti ti-refresh me-1"></i>' + type + '</span>';
            } else {
                return '<span class="badge bg-secondary-lt me-2"><i class="ti ti-file me-1"></i>' + type + '</span>';
            }
        };
        
        // Build detailed content matching original modal structure
        let content = `
            <!-- Controller Information Card -->
            <div class="col-md-12 mb-3">
                <div class="card card-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="ti ti-user me-2"></i>Controller
                        </h5>
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <span class="avatar avatar-lg" style="background-image: url(${resource.author.avatar})"></span>
                            </div>
                            <div class="col">
                                <h4 class="mb-1">${resource.author.scid}</h4>
                                <div class="text-muted">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-world me-1"></i>
                                        <span class="fw-bold">${resource.author.domain}</span>
                                        <span class="text-muted mx-1">:</span>
                                        <span class="fw-bold">${resource.author.namespace}</span>
                                        <span class="text-muted mx-1">:</span>
                                        <span class="fw-bold">${resource.author.alias}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <a href="dids?scid=${resource.author.scid}" class="btn btn-primary btn-sm">
                                    <i class="ti ti-search me-1"></i>View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Resource Information Card (Header) -->
            <div class="col-md-12 mb-4">
                <div class="card card-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="ti ti-file me-2"></i>Resource
                        </h5>
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="d-flex align-items-center mb-2">
                                    ${getResourceTypeBadge(resource.resource_type)}
                                    ${resource.resource_name && resource.resource_name !== resource.resource_id ? 
                                        '<span class="text-muted">' + resource.resource_name + '</span>' : ''}
                                </div>
                                <div class="text-muted">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-hash me-1"></i>
                                        <small class="text-truncate" style="max-width: 600px;">${resource.resource_id}</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <div class="btn-list">
                                    <button type="button" class="btn btn-outline-success btn-sm" 
                                            onclick="copyToClipboard('${resource.resource_id}')" 
                                            title="Copy resource digest">
                                        <i class="ti ti-hash me-1"></i>Copy Digest
                                    </button>
                                    <a target="_blank" href="${resource.url}" class="btn btn-outline-secondary btn-sm">
                                        <i class="ti ti-download me-1"></i>Fetch
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Tabs Card -->
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs nav-bordered card-header-tabs" data-bs-toggle="tabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a href="#tabs-content-modal" class="nav-link active" data-bs-toggle="tab" aria-selected="true" role="tab">
                                    Content
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a href="#tabs-metadata-modal" class="nav-link" data-bs-toggle="tab" aria-selected="false" role="tab" tabindex="-1">
                                    Metadata
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a href="#tabs-links-modal" class="nav-link" data-bs-toggle="tab" aria-selected="false" role="tab" tabindex="-1">
                                    Links
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a href="#tabs-quicklinks-modal" class="nav-link" data-bs-toggle="tab" aria-selected="false" role="tab" tabindex="-1">
                                    <i class="ti ti-link me-1"></i>Quick Links
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" style="min-height: 400px; max-height: 600px; overflow-y: auto;">
                            <!-- Content Tab -->
                            <div class="tab-pane active show" id="tabs-content-modal" role="tabpanel">
                                <pre>${JSON.stringify(resource.attested_resource?.content || resource.attested_resource, null, 2)}</pre>
                            </div>
                            
                            <!-- Metadata Tab -->
                            <div class="tab-pane" id="tabs-metadata-modal" role="tabpanel">
                                ${resource.attested_resource?.metadata ? 
                                    '<div class="list-group list-group-flush">' +
                                    Object.entries(resource.attested_resource.metadata).map(([key, value]) => `
                                        <div class="list-group-item">
                                            <div class="row align-items-center">
                                                <div class="col-auto">
                                                    <span class="avatar avatar-sm bg-primary-lt">
                                                        <i class="ti ti-tag"></i>
                                                    </span>
                                                </div>
                                                <div class="col-3">
                                                    <div class="fw-bold text-capitalize">${key}</div>
                                                </div>
                                                <div class="col">
                                                    <div class="text-secondary" style="word-break: break-word;">
                                                        ${value}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    `).join('') + '</div>'
                                    : '<div class="empty"><p class="empty-title">No metadata available</p></div>'
                                }
                            </div>
                            
                            <!-- Links Tab -->
                            <div class="tab-pane" id="tabs-links-modal" role="tabpanel">
                                ${resource.attested_resource?.links && resource.attested_resource.links.length > 0 ?
                                    resource.attested_resource.links.map(link => `
                                        <div class="card mb-2">
                                            <div class="card-body">
                                                <div class="font-weight-medium">${link.type || '-'}</div>
                                                <div class="text-secondary">${link.id || '-'}</div>
                                                <div class="text-secondary">${link.timestamp || '-'}</div>
                                            </div>
                                        </div>
                                    `).join('')
                                    : '<div class="empty"><p class="empty-title">No links available</p></div>'
                                }
                            </div>
                            
                            <!-- Quick Links Tab -->
                            <div class="tab-pane" id="tabs-quicklinks-modal" role="tabpanel">
                                <div class="list-group list-group-flush">
                                    <a href="${resource.url}" target="_blank" class="list-group-item list-group-item-action">
                                        <i class="ti ti-download me-2"></i>Fetch Resource
                                    </a>
                                    <a href="dids?scid=${resource.author.scid}" class="list-group-item list-group-item-action">
                                        <i class="ti ti-user-circle me-2"></i>View Controller DID
                                    </a>
                                    <a href="resources?scid=${resource.author.scid}" class="list-group-item list-group-item-action">
                                        <i class="ti ti-files me-2"></i>View All Resources from Controller
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        `;
        
        // Update modal content
        document.getElementById('resource-detail-content').innerHTML = content;
    }
</script>