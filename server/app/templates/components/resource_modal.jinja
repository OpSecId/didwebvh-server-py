{% for resource in results %}
<div class="modal modal-blur fade" id="modal-resource-{{ loop.index }}" tabindex="-1" aria-hidden="true"
    style="display: none;">
    <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ti ti-file me-2"></i>Resource Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="height: 600px; overflow-y: auto;">
                <!-- Controller Information -->
                <div class="col-md-12 mb-3">
                    <div class="card card-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="ti ti-user me-2"></i>Controller
                            </h5>
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <span class="avatar avatar-lg" style="background-image: url({{ resource.author.avatar }})"></span>
                                </div>
                                <div class="col">
                                    <h4 class="mb-1">{{ resource.author.scid }}</h4>
                                    <div class="text-muted">
                                        <div class="d-flex align-items-center">
                                            <i class="ti ti-world me-1"></i>
                                            <span class="fw-bold">{{ resource.author.domain }}</span>
                                            <span class="text-muted mx-1">:</span>
                                            <span class="fw-bold">{{ resource.author.namespace }}</span>
                                            <span class="text-muted mx-1">:</span>
                                            <span class="fw-bold">{{ resource.author.alias }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <a href="dids?scid={{ resource.author.scid }}" class="btn btn-primary btn-sm">
                                        <i class="ti ti-search me-1"></i>View
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Resource Information -->
                <div class="col-md-12 mb-4">
                    <div class="card card-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="ti ti-file me-2"></i>Resource
                            </h5>
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="d-flex align-items-center mb-2">
                                        {% if 'Schema' in resource.resource_type %}
                                        <span class="badge bg-blue-lt me-2" style="font-size: 0.875rem;">
                                            <i class="ti ti-database me-1"></i>{{ resource.resource_type }}
                                        </span>
                                        {% elif 'CredDef' in resource.resource_type %}
                                        <span class="badge bg-indigo-lt me-2" style="font-size: 0.875rem;">
                                            <i class="ti ti-id-badge me-1"></i>{{ resource.resource_type }}
                                        </span>
                                        {% elif 'RevReg' in resource.resource_type %}
                                        <span class="badge bg-pink-lt me-2" style="font-size: 0.875rem;">
                                            <i class="ti ti-refresh me-1"></i>{{ resource.resource_type }}
                                        </span>
                                        {% else %}
                                        <span class="badge bg-secondary-lt me-2" style="font-size: 0.875rem;">
                                            <i class="ti ti-file me-1"></i>{{ resource.resource_type }}
                                        </span>
                                        {% endif %}
                                        {% if resource.resource_name %}
                                        <span class="text-muted">{{ resource.resource_name }}</span>
                                        {% endif %}
                                    </div>
                                    <div class="text-muted">
                                        <div class="d-flex align-items-center">
                                            <i class="ti ti-hash me-1"></i>
                                            <small class="text-truncate" style="max-width: 600px;">{{ resource.resource_id }}</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <div class="btn-list">
                                        <button type="button" class="btn btn-outline-success btn-sm" 
                                                onclick="copyToClipboard('{{ resource.resource_id }}')" 
                                                title="Copy resource digest">
                                            <i class="ti ti-hash me-1"></i>Copy Digest
                                        </button>
                                        <a target="_blank" href="{{ resource.url }}" class="btn btn-outline-secondary btn-sm">
                                            <i class="ti ti-download me-1"></i>Fetch
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <ul class="nav nav-tabs nav-bordered card-header-tabs" data-bs-toggle="tabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <a href="#tabs-content-{{ resource.resource_id }}" class="nav-link active"
                                        data-bs-toggle="tab" aria-selected="true" role="tab">Content</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a href="#tabs-metadata-{{ resource.resource_id }}" class="nav-link" data-bs-toggle="tab"
                                        aria-selected="false" role="tab" tabindex="-1">Metadata</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a href="#tabs-links-{{ resource.resource_id }}" class="nav-link" data-bs-toggle="tab"
                                        aria-selected="false" role="tab" tabindex="-1">Links</a>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <a href="#tabs-quicklinks-{{ resource.resource_id }}" class="nav-link"
                                        data-bs-toggle="tab" aria-selected="false" role="tab"
                                        tabindex="-1">
                                        <i class="ti ti-link me-1"></i>Quick Links
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active show" id="tabs-content-{{ resource.resource_id }}"
                                    role="tabpanel">
                                    <div class="row">
                                        <div class="card-body">
                                            <pre>{{ resource.attested_resource.content | tojson(indent=2) }}</pre>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="tabs-metadata-{{ resource.resource_id }}" role="tabpanel">
                                    <div class="row">
                                        {% if resource.attested_resource.metadata %}
                                        <div class="col-md-12">
                                            <div class="list-group list-group-flush">
                                                {% for key, value in resource.attested_resource.metadata.items() %}
                                                <div class="list-group-item">
                                                    <div class="row align-items-center">
                                                        <div class="col-auto">
                                                            <span class="avatar avatar-sm bg-primary-lt">
                                                                <i class="ti ti-tag"></i>
                                                            </span>
                                                        </div>
                                                        <div class="col-3">
                                                            <div class="fw-bold text-capitalize">{{ key }}</div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="text-secondary" style="word-break: break-word;">
                                                                {{ value }}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        {% else %}
                                        <div class="col-md-12">
                                            <div class="empty">
                                                <div class="empty-icon">
                                                    <i class="ti ti-file-info icon icon-lg"></i>
                                                </div>
                                                <p class="empty-title">No metadata available</p>
                                                <p class="empty-subtitle text-secondary">
                                                    This resource has no metadata
                                                </p>
                                            </div>
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="tab-pane" id="tabs-links-{{ resource.resource_id }}" role="tabpanel">
                                    <div class="row">
                                        {% if resource.attested_resource and resource.attested_resource.links %}
                                        {% for link in resource.attested_resource.links %}
                                        <div class="col-md-12">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="font-weight-medium">{{ link.type }}</div>
                                                            <div class="text-secondary">{{ link.id }}
                                                            </div>
                                                            <div class="text-secondary">{{ link.timestamp }}</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        {% endfor %}
                                        {% else %}
                                        <div class="col-md-12">
                                            <div class="empty">
                                                <div class="empty-icon">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10 14a3.5 3.5 0 0 0 5 0l4 -4a3.5 3.5 0 0 0 -5 -5l-.5 .5" /><path d="M14 10a3.5 3.5 0 0 0 -5 0l-4 4a3.5 3.5 0 0 0 5 5l.5 -.5" /></svg>
                                                </div>
                                                <p class="empty-title">No links available</p>
                                                <p class="empty-subtitle text-secondary">
                                                    This resource doesn't have any associated links
                                                </p>
                                            </div>
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="tab-pane" id="tabs-quicklinks-{{ resource.resource_id }}" role="tabpanel">
                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <h4 class="mb-3">
                                                <i class="ti ti-link me-2"></i>Quick Links
                                            </h4>
                                            <div class="list-group list-group-flush">
                                                <a target="_blank" href="{{ resource.url }}" class="list-group-item list-group-item-action">
                                                    <div class="d-flex align-items-center">
                                                        <span class="avatar avatar-sm me-3 bg-blue-lt">
                                                            <i class="ti ti-download"></i>
                                                        </span>
                                                        <div class="flex-fill">
                                                            <div class="fw-bold">Fetch Resource</div>
                                                            <div class="text-secondary text-truncate" style="font-size: 0.75rem;">
                                                                {{ resource.url }}
                                                            </div>
                                                        </div>
                                                        <span class="badge badge-sm bg-blue-lt">External</span>
                                                    </div>
                                                </a>
                                                <a href="dids?scid={{ resource.author.scid }}" class="list-group-item list-group-item-action">
                                                    <div class="d-flex align-items-center">
                                                        <span class="avatar avatar-sm me-3 bg-primary-lt">
                                                            <i class="ti ti-search"></i>
                                                        </span>
                                                        <div class="flex-fill">
                                                            <div class="fw-bold">View Controller DID</div>
                                                            <div class="text-secondary text-truncate" style="font-size: 0.75rem;">
                                                                Search for DID: {{ resource.author.scid }}
                                                            </div>
                                                        </div>
                                                        <span class="badge badge-sm">Internal</span>
                                                    </div>
                                                </a>
                                                <a href="resources?scid={{ resource.author.scid }}" class="list-group-item list-group-item-action">
                                                    <div class="d-flex align-items-center">
                                                        <span class="avatar avatar-sm me-3 bg-green-lt">
                                                            <i class="ti ti-clipboard-search"></i>
                                                        </span>
                                                        <div class="flex-fill">
                                                            <div class="fw-bold">Browse All Resources</div>
                                                            <div class="text-secondary text-truncate" style="font-size: 0.75rem;">
                                                                View all resources from this controller
                                                            </div>
                                                        </div>
                                                        <span class="badge badge-sm">Internal</span>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn me-auto" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endfor %}