{% extends 'layouts/base.jinja' %}
{% block page %}
<div class="page-wrapper">
    <div class="page-header d-print-none" aria-label="Page header">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col-auto">
                    <span class="avatar avatar-lg" style="background-color: var(--brand-accent-light); color: var(--brand-accent);">
                        <i class="ti ti-id-badge-2" style="font-size: 1.5rem;"></i>
                    </span>
                </div>
                <div class="col">
                    <h2 class="page-title mb-1">
                        Verifiable Credentials
                    </h2>
                    <div class="text-secondary">
                        Browse published credentials and their status
                    </div>
                </div>
                <div class="col-auto ms-auto">
                    <div class="btn-list">
                        <a href="resources" class="btn btn-outline-primary">
                            <i class="ti ti-files me-1"></i>Resources
                        </a>
                        <a href="dids" class="btn btn-primary">
                            <i class="ti ti-user-circle me-1"></i>DIDs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            {% include 'components/credential_list.jinja' %}
        </div>
    </div>
</div>
{% endblock %}
